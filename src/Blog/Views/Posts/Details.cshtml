@model Blog.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
<h2>@Model.Title</h2>

<ul class="list-group">
    <li class="list-group-item"><p>@Model.Date</p></li>
    <li class="list-group-item">
        <p class="h-divider"></p>
    </li>
    <li class="list-group-item"><p>@Model.Category</p></li>
    <li class="list-group-item">
        <p class="h-divider"></p>
    </li>

    <li class="list-group-item"><p>@Model.Body</p></li>




    <li class="list-group-item"><p>Post by: @Model.Author</p></li>
</ul>

<dt>
    Comments:
</dt>
@if (Model.CommentList != null)
{
    @foreach (var item in Model.CommentList)
    {

        <dd>
            @item.CommentBody
        </dd>
        <dd>
            @item.CommentAuthor
        </dd>
        <dd>
            @item.CommentDate
        </dd>
                <br>
                <p>
                    <a asp-action="EditComment" asp-route-id="@item.ID" asp-route-PostID="@item.PostID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                    <a asp-action="DeleteComment" asp-route-id="@item.ID" asp-route-PostID="@item.PostID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

                </p>

                <li class="list-group-item">
                    <p class="h-divider"></p>
                </li>
    }
}

<br>
<p>
    <a asp-action="CreateComment" asp-route-id="@Model.ID">Write a comment</a>
</p>

