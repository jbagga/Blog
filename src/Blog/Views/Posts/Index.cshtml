@model PostCategoryViewModel

@{
    ViewData["Title"] = "Index";
}


<h1>Blog Posts Archive</h1>

<form asp-controller="Posts" asp-action="Index" method="get">
    <p>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
        by Category: <select asp-for="postCategory" asp-items="Model.categories">
            <option value="">All</option>
        </select>
        by Author: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

@foreach (var item in Model.posts)
{

    <ul class="list-group">
        <li class="list-group-item"><a asp-action="Details" asp-route-id="@item.ID"><p>@item.Title</p></a></li>
        @if (@item.Body.Length < 100)
        { 
        <li class="list-group-item"><p>@item.Body</p></li>
        }
        else
        {
        <li class="list-group-item"><p>@item.Body.Substring(0, 100)<a asp-action="Details" asp-route-id="@item.ID">...</a></p></li>
        }
        <li class="list-group-item"><p>Category: @item.Category</p></li>
        <li class="list-group-item"><p>@item.Date</p></li>
        <li class="list-group-item"><p>Post by: @item.Author</p></li>
    </ul>
    <tbody>
        <tr>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.ID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                
                <a asp-action="Details" asp-route-id="@item.ID"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></a> |
               
                <a asp-action="Delete" asp-route-id="@item.ID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
        </tr>
    </tbody>
    <hr>
    <br />
    <br/>
    <br />


}

<br/>
<br/>
<p>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    <a asp-action="Create">Create New</a>
</p>