@model PostCategoryViewModel

@{
    ViewData["Title"] = "Index";
}


</br>
</br>
<h1>Blog Posts Archive</h1>
</br>
</br>

<form asp-controller="Posts" asp-action="Index" method="get">
    <p>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
        by Category: <select asp-for="postCategory" asp-items="Model.categories">
            <option value="">All</option>
        </select>
        by Author: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.posts[0].Title)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.posts[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.posts[0].Date)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.posts[0].Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.posts)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit Post</a> |
                    <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                    <a asp-action="Details" asp-route-id="@item.ID">Open Post</a> |
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete Post</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</br>
</br>
